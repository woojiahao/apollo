{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "outDir": "./dist/"
  },
  "exclude": [
    "./.git/",
    "./node_modules/",
    "./dist/"
  ]
}